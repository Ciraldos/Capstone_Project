<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ton?ght - Club, Dance, Repeat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="shortcut icon" href="/images/LogoIco.ico" class="rounded-1" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400" rel="stylesheet">


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark py-1 " id="navbar">
            <div class="container-fluid">
                <!-- Logo visibile solo su mobile (d-md-none) -->
                <a asp-controller="Home" asp-action="Index" class="navbar-brand d-md-none ">
                    <img src="/images/Logo-2.png" alt="logo" width="100px">
                </a>
                <!-- Pulsante per aprire la modale -->

              
                <div class="d-flex">
                        <span data-bs-toggle="modal" class="nav-link d-md-none fs-4" style="cursor:pointer" data-bs-target="#searchModal">
                            <i class="bi bi-search text-white"></i>
                        </span>
                
                    
                    <!-- Bottone toggle per mobile -->
                    <button class="navbar-toggler shadow-none border-0 text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span id="toggleIcon"><i class="bi bi-chevron-bar-down fs-2"></i></span>
                    </button>

                </div>

                <!-- Contenitore per la navbar collassabile -->
                <div class="collapse navbar-collapse " id="navbarNav">
                    <div class="d-flex justify-content-center w-100">
                        <div class="row align-items-center vw-100">

                            <!-- Colonna sinistra: Icona Home (solo desktop) -->
                            <ul class="navbar-nav col-4 d-none d-md-flex justify-content-center align-items-center">
                             
                                <li>
                                    <span data-bs-toggle="modal" class="nav-link d-none d-md-block  fs-4" style="cursor:pointer" data-bs-target="#searchModal">
                                        <i class="bi bi-search" ></i>
                                    </span>
                                </li>
                                <li class="nav-item m-0 ms-md-2">
                                    <a asp-action="List" asp-controller="Event" class="nav-link d-none d-md-block fs-4">
                                        <i class="bi bi-calendar-event"></i>
                                    </a>
                                </li>
                                <li class="nav-item m-0 ms-md-2">
                                    <a asp-action="List" asp-controller="Dj" class="nav-link d-none d-md-block fs-4">
                                        <i class="bi bi-vinyl"></i>
                                    </a>
                                </li>
                            </ul>

                            <!-- Logo centrale (solo desktop) -->
                            <div class="col-4 d-none d-md-flex justify-content-center">
                                <a asp-controller="Home" asp-action="Index" class="navbar-brand mx-auto">
                                    <img src="/images/Logo-2.png" alt="Logo" width="100px">
                                </a>
                            </div>

                            <!-- Colonna destra: Link (per entrambi mobile e desktop) -->
                            <ul class="navbar-nav d-flex justify-content-center text-center col-12 col-md-4 p-0">
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <li class="nav-item m-0 ms-md-2">
                                                <a asp-action="Cart" asp-controller="Cart" class="nav-link d-none d-md-block fs-4">
                                                <span id="cartItemsCount" class="text-white position-relative"></span>
                                            <i class="bi bi-cart"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <a asp-action="Cart" asp-controller="Cart" class="nav-link d-block d-md-none myTitle ">
                                                    Carrello
                                                </a>
                                            </li>
                                            <li class="nav-item m-0 ms-md-2">
                                                <a asp-action="List" asp-controller="Ticket" class="nav-link d-none d-md-block fs-4">
                                                <i class="bi bi-ticket-detailed"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <a asp-action="List" asp-controller="Ticket" class="nav-link d-block d-md-none myTitle ">
                                                    I miei biglietti
                                                </a>
                                            </li>
                                            <li class="nav-item m-0 ms-md-2">
                                                <a asp-action="Profile" asp-controller="User" class="nav-link d-none d-md-block fs-4">
                                                    <i class="bi bi-person-circle"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <a asp-action="List" asp-controller="Event" class="nav-link d-block d-md-none myTitle ">
                                                    Eventi
                                                </a>
                                            </li>
                                            <li>
                                        <a asp-action="List" asp-controller="Dj" class="nav-link d-block d-md-none myTitle ">
                                                    Artisti
                                                </a>
                                            </li>
                                            <li>
                                                <a asp-action="Profile" asp-controller="User" class="nav-link d-block d-md-none myTitle ">
                                                    Profilo
                                                </a>
                                            </li>
                                            @if(User.IsInRole("admin") || User.IsInRole("master"))
                                            {
                                                <li class="nav-item m-0 ms-md-2">
                                                    <a asp-action="Dashboard" asp-controller="Admin" class="nav-link d-none d-md-block fs-4 ">
                                                        <i class="bi bi-wrench-adjustable-circle"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a asp-action="Dashboard" asp-controller="Admin" class="nav-link d-block d-md-none myTitle ">
                                                        Admin
                                                    </a>
                                                </li>
                                            }
                                        }
                                        else
                                        {   <li>
                                                <a asp-action="Login" asp-controller="Auth" class="nav-link d-none d-md-block fs-4 ">
                                                    <i class="bi bi-person-circle"></i>
                                                </a>
                                            </li>
                                            <li>
                                                <a asp-action="Login" asp-controller="Auth" class="nav-link d-block d-md-none myTitle">
                                                    Accedi
                                                </a>
                                            </li>
                                        }
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <li class="nav-item m-0 ms-md-2">
                                            <a asp-action="Logout" asp-controller="Auth" class="nav-link d-none d-md-block fs-4">
                                                <i class="bi bi-door-closed"></i>
                                            </a>
                                            <a asp-action="Logout" asp-controller="Auth" class="nav-link d-block d-md-none myTitle">
                                                Esci
                                            </a>
                                        </li>
                                    }
                               
                                </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
  

    <div class="container-fluid">
     
        <main role="main">
            <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content" style="background-color: transparent; border: none; box-shadow: none;">
                        <div class="modal-body p-0">
                            <div class="searchbar-container">
                                <div class="input-group">
                                    <span class="input-group-text text-white " id="searchIco"><i class="bi bi-search"></i></span>
                                    <input type="text" id="searchbarInput" class="form-control shadow-none" autocomplete="off" placeholder="Cerca per nome...">

                                    <span class="input-group-text text-white " data-bs-dismiss="modal" id="closeIco"><i class="bi bi-x" style="cursor:pointer"></i></span>

                                </div>
                                <ul id="searchbarResults" class="mt-3 d-none searchbar-results"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @* Row che occupa lo spazio della navbar *@
            <div class="row bg-black" style="height:74px;"></div>
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
