@model Capstone.Models.Genre

@{
    ViewData["Title"] = "Create Genre";
}

<div class="row bg-black justify-content-center px-1 p-md-5">
    <h3 class="myText myTitle">Aggiungi Genere</h3>
    <div class="col-10 col-md-6 bg my-2">
        <div class="row">
            <div class="col-12">
                <form asp-action="Create" id="createGenreForm" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label text-white">Nome Genere</label>
                        <input asp-for="Name" class="form-control inputBar" placeholder="Scrivi nome genere..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Salva" class="btn-danger myBtnCart" />
                        <a asp-action="List" class="eventBtn">Torna alla lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
