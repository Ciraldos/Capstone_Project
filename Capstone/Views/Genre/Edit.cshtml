@model Capstone.Models.Genre

@{
    ViewBag.Title = "Edit Genre";
}

<div class="row bg-black justify-content-center px-1 p-md-5">
    <h3 class="myText myTitle">Modifica Genere</h3>
    <div class="col-10 col-md-6 bg my-2">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="GenreId" />

            <div class="form-group">
                <label asp-for="Name" class="control-label text-white">Nome Genere</label>
                <input asp-for="Name" class="form-control inputBar" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn-danger myBtnCart">Salva</button>
                <a asp-action="List" class="eventBtn">Torna alla lista</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
