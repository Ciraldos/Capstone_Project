@model Capstone.Models.Location

@{
    ViewBag.Title = "Location Details";
}

<h2>Location Details</h2>

<div class="form-group">
    <label><strong>Location Name:</strong></label>
    <p>@Model.LocationName</p>
</div>

<div class="form-group">
    <label><strong>Address:</strong></label>
    <p>@Model.AddressGoogleApi</p>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.LocationId" class="btn btn-warning">Edit</a>
    <a asp-action="List" class="btn btn-secondary">Back to List</a>
</p>
