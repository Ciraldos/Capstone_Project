@model Capstone.Models.Location

@{
    ViewBag.Title = "Delete Location";
}

<h2>Delete Location</h2>

<h3>Are you sure you want to delete this location?</h3>
<div>
    <h4>@Model.LocationName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.AddressGoogleApi</dd>
    </dl>
</div>

<a href="@Url.Action("Delete", "Location", new { id = Model.LocationId, confirm = true })" class="btn btn-danger">Delete</a>
<a href="@Url.Action("List", "Location")" class="btn btn-secondary">Cancel</a>
